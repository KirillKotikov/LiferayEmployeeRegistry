<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false">
	<import class="ru.kotikov.registry.model.Bank" />
	<import class="ru.kotikov.registry.model.Employee" />
	<import class="ru.kotikov.registry.model.Position" />
	<class name="ru.kotikov.registry.model.impl.BankImpl" table="registry_Bank">
		<cache usage="read-write" />
		<id name="bankId" type="long">
			<generator class="assigned" />
		</id>
		<property name="bankName" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="bik" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="bankAddress" type="com.liferay.portal.dao.orm.hibernate.StringType" />
	</class>
	<class name="ru.kotikov.registry.model.impl.EmployeeImpl" table="registry_Employee">
		<cache usage="read-write" />
		<id name="employeeId" type="long">
			<generator class="assigned" />
		</id>
		<property name="lastName" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="firstName" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="patronymic" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="sex" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="dateOfBirth" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="positionId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="dateOfEmployment" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="salary" type="com.liferay.portal.dao.orm.hibernate.IntegerType" />
		<property name="workPhoneNumber" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="mobilePhoneNumber" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="bankId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="archiveStatus" type="com.liferay.portal.dao.orm.hibernate.BooleanType" />
	</class>
	<class name="ru.kotikov.registry.model.impl.PositionImpl" table="registry_Position">
		<cache usage="read-write" />
		<id name="positionId" type="long">
			<generator class="assigned" />
		</id>
		<property name="positionName" type="com.liferay.portal.dao.orm.hibernate.StringType" />
		<property name="archiveStatus" type="com.liferay.portal.dao.orm.hibernate.BooleanType" />
	</class>
</hibernate-mapping>